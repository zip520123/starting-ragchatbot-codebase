{
  "permissions": {
    "allow": [
      "Bash(export PATH=\"$HOME/.local/bin:$PATH\")",
      "Bash(uv sync:*)",
      "Bash(uv python pin:*)",
      "Bash(uv run:*)",
      "Bash(curl:*)",
      "Bash(lsof:*)",
      "Bash(xargs kill:*)",
      "Bash(timeout 10 uv run:*)",
      "Bash(cat:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git worktree:*)",
      "Bash(gh auth status:*)",
      "Bash(gh repo fork:*)",
      "Bash(git remote set-url:*)",
      "Bash(git pull:*)",
      "Bash(git log:*)",
      "Bash(git remote add:*)",
      "Bash(git fetch:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "say 'All done'"
          }
        ]
      }
    ]
  }
}
