[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503, E402
per-file-ignores =
    backend/tests/*:F401,F811,F841
    backend/app.py:E402,F811
    backend/models.py:F401
    backend/rag_system.py:F401
    backend/search_tools.py:F401
    backend/vector_store.py:F401
exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    chroma_db
max-complexity = 25
